# Transcription Pipeline Configuration
# Copy this file to .env and fill in your values

# ============================================
# API KEYS (Required)
# ============================================

# Groq API Key - for Whisper transcription
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek API Key - for transcript formatting
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# HuggingFace Token - for pyannote speaker diarization
# Get from: https://huggingface.co/settings/tokens
# Also accept the user agreement at: https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ============================================
# PATH CONFIGURATION
# ============================================

# Adjusted for home directory installation (use /opt paths if moved)
UPLOAD_DIR=/home/peptifit/transcription-pipeline/uploads
PROCESSING_DIR=/home/peptifit/transcription-pipeline/processing
OUTPUT_DIR=/home/peptifit/transcription-pipeline/outputs
LOGS_DIR=/home/peptifit/transcription-pipeline/logs
MODELS_DIR=/home/peptifit/transcription-pipeline/models

# ============================================
# APPLICATION SETTINGS
# ============================================

DEBUG=false
LOG_LEVEL=INFO

# ============================================
# FILE WATCHER SETTINGS
# ============================================

WATCH_RECURSIVE=true
MAX_FILE_SIZE_MB=500

# ============================================
# MODEL CONFIGURATION
# ============================================

# Whisper model (used by Groq - options: whisper-large-v3, whisper-large-v3-turbo)
WHISPER_MODEL=whisper-large-v3-turbo

# Speaker diarization model
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1

# ============================================
# PROCESSING SETTINGS
# ============================================

MAX_WORKERS=2
CHUNK_DURATION_SEC=30

# ============================================
# OUTPUT SETTINGS
# ============================================

# Output formats: txt, json, docx, md, vtt, srt
OUTPUT_FORMATS=txt,docx,md

# Include timestamps in output
INCLUDE_TIMESTAMPS=true

# Include speaker labels (requires diarization)
INCLUDE_SPEAKER_LABELS=true

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# Email notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=recipient@example.com
# KATE_EMAIL=kate@example.com          # For social work lecture notifications
# KEIRA_EMAIL=keira@example.com        # For business lecture notifications

# Webhook for completion notifications (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/callback

# Obsidian sync (optional - path to Obsidian vault)
# OBSIDIAN_VAULT_PATH=/path/to/obsidian/vault

# ============================================
# ADVANCED SETTINGS
# ============================================

# Number of worker processes
WORKER_CONCURRENCY=2

# Redis configuration (if using distributed processing)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Second email for Keira's cohort member
# KEIRA_COHORT_EMAIL=cohort@example.com
